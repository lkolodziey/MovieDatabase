<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieDatabase.MovieDetail">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout BindingContext="{Binding movie}">
                <Label>Movie Title</Label>
                <Label FontSize="15" FontAttributes="Bold" Text="{Binding title}" />
                <Label>Original Title</Label>
                <Label FontSize="15" FontAttributes="Bold" Text="{Binding original_title}" />
                <Label>Original Language</Label>
                <Label FontSize="15" FontAttributes="Bold" Text="{Binding original_language}" />
                <Image Source="{Binding poster_path}" />
                <Label>Spoken Languages</Label>
                <Label FontSize="15" FontAttributes="Bold" Text="{Binding spoken_languages_list}" LineBreakMode="WordWrap" />
                <Label>Genres</Label>
                <Label FontSize="15" FontAttributes="Bold" Text="{Binding genres_list}" LineBreakMode="WordWrap"/>
                <Label>Overview</Label>
                <Label FontSize="15" FontAttributes="Bold" Text="{Binding overview}" LineBreakMode="WordWrap" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>